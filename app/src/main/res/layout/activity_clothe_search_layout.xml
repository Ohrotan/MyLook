<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/upper_spring"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="봄"
                android:textSize="19dp"
                android:layout_weight="25"
                android:gravity="center"/>


            <TextView
                android:id="@+id/upper_summer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="여름"
                android:textSize="19dp"
                android:layout_weight="25"
                android:gravity="center"/>


            <TextView
                android:id="@+id/upper_fall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="가을"
                android:textSize="19dp"
                android:layout_weight="25"
                android:gravity="center"/>


            <TextView
                android:id="@+id/upper_winter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="겨울"
                android:textSize="19dp"
                android:layout_weight="25"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="100"
        android:orientation="vertical">
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/search_view"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="검색할 단어를 입력하세요." />

           <ImageButton
               android:id="@+id/search_btn"
               android:layout_width="0dp"
               android:layout_height="40dp"
               android:layout_weight="1"
               android:src ="@drawable/search"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">

            <TextView
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색 결과"
                android:textSize="25dp"
                android:textStyle="bold"
                />
            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="100dp"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:numColumns="3"
                android:background="@drawable/shape_search_background">
            </GridView>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tab_closet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickTab"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:tag="cur"
            app:srcCompat="@drawable/closet_tab_on" />

        <ImageView
            android:id="@+id/tab_coordi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickTab"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/codi_tab" />

        <ImageView
            android:id="@+id/tab_analysis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickTab"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:srcCompat="@drawable/analysis_tab" />



    </LinearLayout>




</LinearLayout>

