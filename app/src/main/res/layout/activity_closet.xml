<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/upper_spring"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="봄"
                android:textSize="19dp"
                android:layout_weight="25"
                android:background="#1A5d0082"
                android:gravity="center"/>


            <TextView
                android:id="@+id/upper_summer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="여름"
                android:textSize="19dp"
                android:layout_weight="25"
                android:background="#1A5d0082"
                android:gravity="center"/>


            <TextView
                android:id="@+id/upper_fall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="가을"
                android:textSize="19dp"
                android:layout_weight="25"
                android:background="#1A5d0082"
                android:gravity="center"/>


            <TextView
                android:id="@+id/upper_winter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="겨울"
                android:textSize="19dp"
                android:layout_weight="25"
                android:background="#1A5d0082"
                android:gravity="center"/>

        </LinearLayout> //계절버튼

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/upper_top"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="상의"
                android:textSize="19dp"
                android:layout_weight="20"
                android:background="#1A5d0082"
                android:layout_marginLeft="0dp"
                android:gravity="center"/>


            <TextView
                android:id="@+id/upper_bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="하의"
                android:textSize="19dp"
                android:layout_weight="20"
                android:background="#1A5d0082"
                android:gravity="center"/>


            <TextView
                android:id="@+id/upper_hat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="모자"
                android:textSize="19dp"
                android:layout_weight="20"
                android:background="#1A5d0082"
                android:gravity="center"/>


            <TextView
                android:id="@+id/upper_shoes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="신발"
                android:textSize="19dp"
                android:layout_weight="20"
                android:background="#1A5d0082"
                android:gravity="center"/>

            <TextView
                android:id="@+id/upper_etc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="기타"
                android:textSize="19dp"
                android:layout_weight="20"
                android:background="#1A5d0082"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                />
        </LinearLayout>//구분 버튼
    </LinearLayout> //버튼 레이아웃 끝



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="100">

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnWidth="100dp"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:numColumns="auto_fit" >
        </GridView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="tab_1"
            android:textSize="25dp"
            android:layout_weight="33.3333"
            android:background="#F9F9F9"
            android:gravity="center"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="tab_2"
            android:textSize="25dp"
            android:layout_weight="33.3333"
            android:background="#F9F9F9"
            android:gravity="center"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="tab_3"
            android:textSize="25dp"
            android:layout_weight="33.3333"
            android:background="#F9F9F9"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>

